[Unit]
Description=Femas metrics bridge -- unix to tcp
After=network-online.target

[Service]
TimeoutStartSec=0
ExecStart=/usr/bin/docker run --rm --name %n -i \
  --network roq-network \
  --volume {{ root }}/var/tmp:/var/tmp \
  roq-femas-bridge \
  /usr/bin/socat tcp-listen:{{ femas_config.metrics.port }},fork unix-connect:/var/tmp/femas.metrics.sock

[Install]
WantedBy=multi-user.target
